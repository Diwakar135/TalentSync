<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".activities.InterviewInvitationActivity">

    <TextView
        android:id="@+id/text_interview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Interview Title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/text_interview_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Interview Time"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/text_interview_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Interview Link"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/button_join_interview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join Interview" />
</LinearLayout>
